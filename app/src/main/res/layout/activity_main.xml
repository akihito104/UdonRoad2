<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.freshdigitable.udonroad2.main.MainViewModel"
            />
    </data>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.freshdigitable.fabshortcut.FlingFAB
            android:id="@+id/main_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:layout_gravity="center_horizontal|bottom"
            app:menu="@menu/iffab_main"
            style="@style/Widget.FlingFAB"
            app:menuListener="@{viewModel::onFabMenuSelected}"
            app:isVisible="@{viewModel.fabVisible}"
            />
    </FrameLayout>
</layout>
