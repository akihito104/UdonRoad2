<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.FrameLayout"
    >
    <!-- TODO: set contentDescription from attribute of FlingFAB -->
    <ImageView
        android:id="@+id/actionIndicator_up"
        android:layout_width="@dimen/indicator_icon_size"
        android:layout_height="@dimen/indicator_icon_size"
        android:layout_gravity="top|center_horizontal"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/actionIndicator_left"
        android:layout_width="@dimen/indicator_icon_size"
        android:layout_height="@dimen/indicator_icon_size"
        android:layout_gravity="left|center_vertical"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/actionIndicator_right"
        android:layout_width="@dimen/indicator_icon_size"
        android:layout_height="@dimen/indicator_icon_size"
        android:layout_gravity="right|center_vertical"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/actionIndicator_down"
        android:layout_width="@dimen/indicator_icon_size"
        android:layout_height="@dimen/indicator_icon_size"
        android:layout_gravity="bottom|center_horizontal"
        tools:ignore="ContentDescription"
        />
</merge>
