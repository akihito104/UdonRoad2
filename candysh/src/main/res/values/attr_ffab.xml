<resources>
    <attr name="indicatorTint" format="reference|color"/>
    <attr name="indicatorIconTint" format="reference|color"/>
    <attr name="marginFabToIndicator" format="dimension"/>
    <attr name="menu" format="reference"/>
    <attr name="direction" format="enum">
        <enum name="up" value="6" />
        <enum name="up_right" value="7" />
        <enum name="right" value="0" />
        <enum name="down_right" value="1" />
        <enum name="down" value="2" />
        <enum name="down_left" value="3" />
        <enum name="left" value="4" />
        <enum name="up_left" value="5" />
    </attr>

    <declare-styleable name="FlingFAB">
        <attr name="indicatorTint" />
        <attr name="indicatorIconTint" />
        <attr name="marginFabToIndicator" />
        <attr name="menu" />
    </declare-styleable>

    <declare-styleable name="FlingFABMenu">
        <attr name="direction" />
    </declare-styleable>

    <declare-styleable name="FlingFABTheme">
        <attr name="iffabStyle" format="reference"/>
    </declare-styleable>

    <style name="Widget.FlingFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="indicatorTint">#cccc</item>
        <item name="indicatorIconTint">@android:color/white</item>
        <item name="marginFabToIndicator">60dp</item>
        <item name="srcCompat">@drawable/ic_add</item>
        <item name="fabSize">normal</item>
    </style>

    <item name="indicator" type="id" />
    <dimen name="ffab_margin_bottom">32dp</dimen>
    <dimen name="ffab_toolbar_icon_padding">12dp</dimen>
    <dimen name="indicator_icon_size">16dp</dimen>
    <dimen name="margin">8dp</dimen>
</resources>